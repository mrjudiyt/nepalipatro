            <TextView android:textSize="@dimen/sp_10" android:textColor="@color/fab_material_green_700" android:layout_gravity="start" android:id="@+id/news_widget_item_source_tv" android:padding="@dimen/dp_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="source" android:maxLines="1"/>
